<h1><%= @artist.id ? 'Edit Artist' : 'Create Billboard' %></h1>
<%= form_for @artist do |f| %>
  <%= f.label :first_name %>
  <%= f.bootstrap_text_field :first_name, required: true, autofocus: true %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name, required: true, autofocus: true %>
  <%= f.label :age %>
  <%= f.text_field :age, required: true, autofocus: true %>
 

  <%= f.submit %>
<% end %>